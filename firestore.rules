rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isStudent() {
      return getUserRole() == 'student';
    }
    
    function isTeacher() {
      return getUserRole() == 'teacher';
    }
    
    function isAdmin() {
      return getUserRole() == 'admin';
    }
    
    function isTeacherOrAdmin() {
      return isTeacher() || isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      // Teachers/Admins can read any profile
      allow read: if isAuthenticated() && (isOwner(userId) || isTeacherOrAdmin());
      
      // Users can only create their own profile during registration
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Users can update their own profile (except role)
      // Admins can update any profile
      allow update: if isAuthenticated() && (
        (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) ||
        isAdmin()
      );
      
      // Only admins can delete users
      allow delete: if isAuthenticated() && isAdmin();
    }
    
    // Submissions collection
    match /submissions/{submissionId} {
      // Students can read their own submissions
      // Teachers/Admins can read all submissions
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid ||
        isTeacherOrAdmin()
      );
      
      // Only students can create submissions
      allow create: if isAuthenticated() && isStudent() && 
        request.resource.data.studentId == request.auth.uid;
      
      // Students can update their own drafts/returned submissions
      // Teachers can update any submission (for status changes)
      allow update: if isAuthenticated() && (
        (resource.data.studentId == request.auth.uid && 
         resource.data.status in ['draft', 'returned']) ||
        isTeacherOrAdmin()
      );
      
      // Students can delete their own drafts
      // Admins can delete any submission
      allow delete: if isAuthenticated() && (
        (resource.data.studentId == request.auth.uid && resource.data.status == 'draft') ||
        isAdmin()
      );
      
      // Submission versions subcollection
      match /versions/{versionId} {
        allow read: if isAuthenticated() && (
          get(/databases/$(database)/documents/submissions/$(submissionId)).data.studentId == request.auth.uid ||
          isTeacherOrAdmin()
        );
        
        allow create: if isAuthenticated() && (
          get(/databases/$(database)/documents/submissions/$(submissionId)).data.studentId == request.auth.uid ||
          isTeacherOrAdmin()
        );
        
        allow update, delete: if false; // Versions are immutable
      }
    }
    
    // Rubrics collection
    match /rubrics/{rubricId} {
      // Students can read public rubrics
      // Teachers/Admins can read all rubrics
      allow read: if isAuthenticated() && (
        resource.data.isPublic == true ||
        isTeacherOrAdmin()
      );
      
      // Only teachers can create rubrics
      allow create: if isAuthenticated() && isTeacherOrAdmin() &&
        request.resource.data.teacherId == request.auth.uid;
      
      // Teachers can update their own rubrics
      // Admins can update any rubric
      allow update: if isAuthenticated() && (
        resource.data.teacherId == request.auth.uid ||
        isAdmin()
      );
      
      // Teachers can delete their own rubrics
      // Admins can delete any rubric
      allow delete: if isAuthenticated() && (
        resource.data.teacherId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // Evaluations collection
    match /evaluations/{evaluationId} {
      // Students can read evaluations of their submissions
      // Teachers/Admins can read all evaluations
      allow read: if isAuthenticated() && (
        get(/databases/$(database)/documents/submissions/$(resource.data.submissionId)).data.studentId == request.auth.uid ||
        isTeacherOrAdmin()
      );
      
      // Only teachers can create evaluations
      allow create: if isAuthenticated() && isTeacherOrAdmin();
      
      // Evaluators can update their own evaluations
      // Admins can update any evaluation
      allow update: if isAuthenticated() && (
        resource.data.evaluatorId == request.auth.uid ||
        isAdmin()
      );
      
      // Only admins can delete evaluations
      allow delete: if isAuthenticated() && isAdmin();
    }
  }
}
